{
    "name": "interactive-us-county-map",
    "version": "1.0.0",
    "description": "Interactive US County Map application",
    "main": "js/main.js",
    "scripts": {
        "start": "nodemon --watch js --watch . --watch index.html --ext js,html,css --exec 'http-server -p 3000 -c-1'",
        "build": "NODE_ENV=production mkdir -p dist && cp -r index.html js style.css switch dist/ && uglifyjs-folder js -eo dist/js && npx clean-css-cli -o dist/style.css style.css"
    },
    "devDependencies": {
        "clean-css-cli": "^5.6.3",
        "http-server": "^14.1.1",
        "nodemon": "^3.0.2",
        "uglifyjs-folder": "^3.3.0"
    }
}